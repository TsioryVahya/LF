@{
    ViewData["Title"] = "Accueil";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16">
        <div class="inline-block bg-accent/20 px-6 py-2 rounded-full mb-4">
            <span class="text-primary font-semibold text-sm uppercase tracking-wide">Exercice Fiscal 2025</span>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-primary mb-4">
            Tableau de Bord des Recettes Budgétaires
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
            Système de gestion et de suivi transparent des recettes de l'État malgache
        </p>
        <div class="bg-gradient-to-r from-primary to-secondary text-white px-8 py-4 rounded-lg shadow-lg inline-block">
            <p class="text-lg font-semibold">Budget de Consolidation et de Croissance</p>
        </div>
    </div>

    <!-- Cartes des Catégories -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
        <!-- Recettes Intérieures -->
        <a asp-controller="Home" asp-action="RecettesInterieures" 
           class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-l-4 border-primary overflow-hidden">
            <div class="p-8 text-center">
                <div class="w-20 h-20 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary group-hover:scale-110 transition-all duration-300">
                    <svg class="w-10 h-10 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Recettes Intérieures</h3>
                <p class="text-sm text-gray-600 mb-4">Impôts et taxes collectés sur le territoire national</p>
                <span class="inline-block bg-primary text-white px-4 py-2 rounded-lg text-sm font-semibold group-hover:bg-secondary group-hover:text-primary transition-colors">
                    Consulter →
                </span>
            </div>
        </a>

        <!-- Recettes Douanières -->
        <a asp-controller="Home" asp-action="RecettesDouanieres" 
           class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-l-4 border-secondary overflow-hidden">
            <div class="p-8 text-center">
                <div class="w-20 h-20 bg-secondary/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-secondary group-hover:scale-110 transition-all duration-300">
                    <svg class="w-10 h-10 text-secondary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Recettes Douanières</h3>
                <p class="text-sm text-gray-600 mb-4">Droits et taxes perçus aux frontières</p>
                <span class="inline-block bg-secondary text-white px-4 py-2 rounded-lg text-sm font-semibold group-hover:bg-primary group-hover:text-white transition-colors">
                    Consulter →
                </span>
            </div>
        </a>

        <!-- Recettes Non Fiscales -->
        <a asp-controller="Home" asp-action="RecettesNonFiscales" 
           class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-l-4 border-accent overflow-hidden">
            <div class="p-8 text-center">
                <div class="w-20 h-20 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent group-hover:scale-110 transition-all duration-300">
                    <svg class="w-10 h-10 text-accent group-hover:text-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Recettes Non Fiscales</h3>
                <p class="text-sm text-gray-600 mb-4">Revenus des services publics et domaines</p>
                <span class="inline-block bg-accent text-primary px-4 py-2 rounded-lg text-sm font-semibold group-hover:bg-primary group-hover:text-white transition-colors">
                    Consulter →
                </span>
            </div>
        </a>

        <!-- Dons -->
        <a asp-controller="Home" asp-action="Dons" 
           class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border-l-4 border-primary overflow-hidden">
            <div class="p-8 text-center">
                <div class="w-20 h-20 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-primary group-hover:scale-110 transition-all duration-300">
                    <svg class="w-10 h-10 text-primary group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Dons</h3>
                <p class="text-sm text-gray-600 mb-4">Aides et subventions des partenaires</p>
                <span class="inline-block bg-primary text-white px-4 py-2 rounded-lg text-sm font-semibold group-hover:bg-secondary group-hover:text-primary transition-colors">
                    Consulter →
                </span>
            </div>
        </a>
    </div>

    <!-- Section À Propos -->
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-t-4 border-accent">
            <div class="bg-gradient-to-r from-primary to-secondary px-8 py-6">
                <h2 class="text-2xl font-bold text-white">À propos de la Loi de Finances 2025</h2>
            </div>
            <div class="p-8">
                <p class="text-gray-700 leading-relaxed mb-8">
                    La Loi de Finances 2025 de la République de Madagascar s'inscrit dans une dynamique de 
                    consolidation budgétaire et de croissance économique. Elle vise à mobiliser les ressources 
                    nécessaires pour financer les politiques publiques et les investissements prioritaires.
                </p>
                
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="text-center p-6 bg-primary/5 rounded-xl border-2 border-primary/20">
                        <div class="text-5xl font-bold text-primary mb-2">4</div>
                        <p class="text-sm text-gray-600 font-medium">Catégories de Recettes</p>
                    </div>
                    <div class="text-center p-6 bg-secondary/5 rounded-xl border-2 border-secondary/20">
                        <div class="text-5xl font-bold text-secondary mb-2">2025</div>
                        <p class="text-sm text-gray-600 font-medium">Exercice Fiscal</p>
                    </div>
                    <div class="text-center p-6 bg-accent/5 rounded-xl border-2 border-accent/20">
                        <div class="text-5xl font-bold text-primary mb-2">100%</div>
                        <p class="text-sm text-gray-600 font-medium">Transparence</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
